@model Caltec.StudentInfoProject.WebUi.Pages.Students.SchoolFees.BaseSchoolFeesModel
@{
    var pageTitle = (string?)ViewData["PageTitle"] ?? "School Fee";
    var pageAction = (string?)ViewData["PageAction"] ?? "Edit";
    var submitLabel = (string?)ViewData["SubmitLabel"] ?? "Save";
    var isEdit = (bool?)ViewData["IsEdit"] ?? false;
}

<h1>@pageTitle</h1>

<hr />
<p>
    @pageAction School Fees for @Model.Student.FirstName @Model.Student.LastName
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="~/Pages/Shared/_SchoolFeesFormFields.cshtml" for="SchoolFees" />
            @if (isEdit)
            {
                <input type="hidden" asp-for="SchoolFees.Id" />
            }
            <div class="form-group">
                <input type="submit" value="@submitLabel" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Students/Details" asp-route-id="@Model.Student.Id">Back to Student details</a>
</div>
